<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".impian.AddImpianActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        style="@style/MarginFormEdittext">
        <EditText
            android:id="@+id/nama_impian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama_impian"
            android:inputType="text"
            android:padding="8dp"
            android:layout_margin="10dp"
            android:cursorVisible="true"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_regular"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        style="@style/MarginFormEdittext">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/judul_pencapaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_pencapaian"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_medium"/>

            <ImageButton
                android:id="@+id/btn_mulai_impian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_today"
                android:layout_below="@id/judul_pencapaian"
                style="@style/MarginForm"
                android:paddingBottom="10dp"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/mulai_impian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waktu_pencapaian"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/btn_mulai_impian"
                android:layout_below="@id/judul_pencapaian"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        style="@style/MarginFormEdittext">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txhabits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kebiasaan_impian"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_medium"/>

            <LinearLayout
                android:id="@+id/layout_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txhabits"
                android:layout_margin="10dp"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/btnTambahList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tambah"
                android:textSize="17sp"
                android:background="@drawable/rectangle_cardview"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:drawableStart="@drawable/ic_add_black_24dp"
                android:layout_below="@id/layout_list"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnsimpan_impian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MarginFormEdittext"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simpan"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>